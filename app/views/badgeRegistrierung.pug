
extends layout
block content

    .container.bg-light.mt-5.border.fadein(id='#fadein')
        // messages from server
        if (messages.error)
          for message in messages.error
            .alert.alert-danger
              span= message
        if (messages.success)
          for message in messages.success
            .alert.alert-success
              span= message
        if (messages.info)
          for message in messages.info
            .alert.alert-info
              span= message
        .row
            .col-lg
            .col-lg-6
                h1 neues Badge
                br
                form(action='/badge/registrierung', method="POST")
                    .form-row
                        .form-group.col-auto
                            label(for='inputBadgeName') Titel:
                            input#inputBadgeName.form-control(name='name', type='text' placeholder='Titel' data-toggle='tooltip' data-placement='top' title='Gültiger Titel')
                    .form-row
                        .form-group.col-auto
                            label(for='inputDescription') Beschreibung:
                            input#inputDescription.form-control(name='description', type='text' placeholder='Beschreibung' data-toggle='tooltip' data-placement='top' title='Beschreibung')
                    .form-row
                        .form-group.col-auto
                            label(for='inputCriteria') Kriterien:
                            input#inputCriteria.form-control(name='criteria', type='text' placeholder='Kriterien' data-toggle='tooltip' data-placement='top' title='Gültige Kriterien')
                    .form-row
                        button.btn.btn-primary(type='submit') Senden
            .col-lg
        br
    script.
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js' integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo' crossorigin='anonymous')
