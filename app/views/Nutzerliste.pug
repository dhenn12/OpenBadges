extends layout
block content
    // Badge Vergabe für globale & lokale Badges !
    .card.card-body
        .container.bg-light.mt-5.border(id='#fadein')
            .row
                .col-lg
                .col-lg-6
                        form
                            table.table.table-striped
                                thead
                                    tr
                                        th(scope='col') #
                                        th(scope='col') Name
                                        //Logik einfügen
                                        th(scope='col')
                                            input.form-control(value="Placeholder Badge", readonly='')
                                tbody
                                    tr
                                        th(scope='row') 1
                                        td
                                            input.form-control(value="Placeholder Name", readonly='')
                                        td
                                            input.form-check-input(type='checkbox', value='Badge')
                                    tr
                                        th(scope='row') 2
                                        td
                                            input.form-control(value="Placeholder Name", readonly='')
                                        td
                                            input.form-check-input(type='checkbox', value='option1')
                                    tr
                                        th(scope='row') 3
                                        td
                                            input.form-control(value="Placeholder Name", readonly='')
                                        td
                                            input.form-check-input(type='checkbox', value='option1')
                            button.btn.btn-primary.mb-2(type='submit') Badge Vergabe Bestätigen
                .col-lg
            br
