extends layout
block content
        .container.bg-light.mt-5.border.fadein(id='#fadein')
            form(action='/kontakt', method='POST')
                .form-group.col-auto
                    label(for='email') Email
                    input#email.form-control(type='email',
                    if(email)
                      value = email
                    required='true', name='email')
                .form-group.col-auto
                    label(for='Betreff') Anliegen
                    select#Betreff.form-control(name='subject', required='true', data-toggle='tooltip', data-placement='top', title='Wählen sie aus was ihr Anliegen am besten Beschreibt')
                        option #1
                        option #2
                .form-group.col-auto(data-toggle='tooltip', data-placement='top', title='Beschreiben sie ihr Anliegen möglichst genau')
                    label(for='Eingabe') Eingabefeld
                    textarea#Eingabe.form-control(name='content', required='true')
                    span#badge.badge.badge-danger
                button.btn.btn-primary.col-auto(type='submit') Submit
            .col-sm
        script(crossorigin='anonymous', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
