extends layout
block content
    .container(id='#fadein')
        // messages from server
        if (messages.error)
          for message in messages.error
            .alert.alert-danger
              span= message
        .row
            .col
                .mt-5
                    img.img-fluid(src='https://upload.wikimedia.org/wikipedia/commons/thumb/7/7f/Logo_WWU_M%C3%BCnster.svg/2000px-Logo_WWU_M%C3%BCnster.svg.png', alt='Responsive image')
            .col-6
                .container.bg-light.mt-5.border
                    h1 Passwort Vergessen?
                    p
                        | Geben Sie Ihren Nutzernamen ein, welcher mit Ihrem Konto verknüpft ist.
                    // Keine Ahnung ob die Action so korrekt ist. Müsste man das Backend Team Fragen !
                    form(action='/nutzer/passwort', method='POST')
                        .form-group
                            label(for='username') Nutzername
                            input#username.form-control(type='text', name='username', aria-describedby='emailHelp')
                        button.btn.btn-primary.btn-lg.btn-block(type='submit') Abschicken
                    br
            .col
