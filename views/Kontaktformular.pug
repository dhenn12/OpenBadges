doctype html
html(lang='en')
    head
        // Required meta tags
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        // Bootstrap CSS
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
        title Open Badges!
    body(style="background: url('https://bit.ly/2NSlv5Y') no-repeat center center fixed;background-size: cover;")
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark(class='navbar-toggleable-*')
            a.navbar-brand(href='#') Open Badges
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item
                        a.nav-link(href='google.de') Starseite
                    li.nav-item
                        a.nav-link(href='amazon.de') Kursliste
                    li.nav-item
                        a.nav-link(href='amazon.de') Belegte Kurse
                    li.nav-item
                        a.nav-link(href='amazon.de') Admin Kontakt
                    li.nav-item
                        a.nav-link(href='amazon.de', style='color: red;') Logout
        .container
            .row
                .col-sm
                .col-sm
                    .text-center(style='align-items: center;')
                        form(action='')
                            .form-group
                                .col-auto
                                label(for='EmailInput')
                                    | E-Mail Adresse
                                    input#EmailInput.form-control.form-control-lg(type='email', placeholder='name@example.com')
                            .form-group
                                label(for='Betreff') Anliegen
                                .col-auto
                                select#Betreff.form-control.form-control-lg
                                    option FrageA
                                    option FrageB
                            .form-group
                                label(for='Eingabe') Eingabefeld
                                .col-auto
                                    textarea#Eingabe.form-control.form-control-lg
                            button.btn.btn-primary.my-1(type='submit') Submit
                .col-sm
        script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
